# LLM Multi-Agent Optimization Framework - Environment Variables
# Copy this file to .env and fill in your actual API keys

# =============================================================================
# HUGGING FACE (Required for GAIA benchmark execution)
# =============================================================================
# Get your token from: https://huggingface.co/settings/tokens
HF_TOKEN=your_huggingface_token_here

# =============================================================================
# SEARCH API (Required for search agent functionality)
# =============================================================================
# Get your API key from: https://serpapi.com/
SERPAPI_API_KEY=your_serpapi_key_here

# =============================================================================
# LLM PROVIDERS (Required for actual model inference)
# =============================================================================

# OpenAI API Key (for GPT models)
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API Key (for Claude models) 
# Get your key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Google API Key (for Gemini models)
# Get your key from: https://aistudio.google.com/app/apikey
GOOGLE_API_KEY=your_google_api_key_here

# =============================================================================
# ADDITIONAL PROVIDERS (Optional)
# =============================================================================

# Cohere API Key (for Command models)
COHERE_API_KEY=your_cohere_api_key_here

# Together AI API Key (for open source models)
TOGETHER_API_KEY=your_together_api_key_here

# Replicate API Key (for hosted models)
REPLICATE_API_TOKEN=your_replicate_token_here

# =============================================================================
# FRAMEWORK CONFIGURATION
# =============================================================================

# Default to fallback mode if real evaluation fails
GAIA_FALLBACK_ON_ERROR=true

# Enable verbose logging for debugging
GAIA_VERBOSE_LOGGING=false

# Maximum timeout for individual GAIA task execution (seconds)
GAIA_TASK_TIMEOUT=300
